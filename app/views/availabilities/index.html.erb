<p id="notice"><%= notice %></p>

<h1>Availabilities</h1>

<div class="mx-auto text-center">
  <%= link_to 'Back', "#{services_path}/#{params[:service_id]}", class: "btn btn-secondary" %>
</div>

<h2>Booked Appointments</h2>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Start</th>
      <th>End</th>
      <th>Is available</th>
      <th>Is recurring</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @availabilities.each do |availability| %>
      <tr>
        <td><%= availability.user_id %></td>
        <td><%= availability.start %></td>
        <td><%= availability.end %></td>
        <td><%= availability.is_available %></td>
        <td><%= availability.is_recurring %></td>
        <td><%= link_to 'Show', availability %></td>
        <td><%= link_to 'Edit', edit_availability_path(availability) %></td>
        <td><%= link_to 'Destroy', availability, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Availability', new_availability_path %>
