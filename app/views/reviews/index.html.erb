<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<br>
<div class="mx-auto text-center">
  <a class="btn btn-outline-secondary btn-lg" href=/reviews/new role="button">Give a new review</a>
</div>
<br>

<table class="table">
<%# headers for the table %>
  <thead>
    <tr>
      <th>Service</th>
      <th>User</th>
      <th>Rating</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <%# content for the table %>
  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.service_id %></td>
        <td><%= review.user_id %></td>
        <td><%= review.rating %></td>
        <td><%= review.review %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

