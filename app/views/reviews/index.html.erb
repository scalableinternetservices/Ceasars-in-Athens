<h1>Reviews</h1>

<div class="mx-auto text-center">
  <%= link_to 'Back', @service, class: "btn btn-secondary" %>
  <%= link_to 'Make a Review', new_service_review_path(@service), class: "btn btn-primary" %>
</div>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Rating</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.user_id %></td>
        <td><%= review.rating %></td>
        <td><%= review.review %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

