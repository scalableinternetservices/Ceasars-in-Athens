<%= form_with(model: service) do |form| %>
  <% if service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
        <% service.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, class: "control-label" %>
    <%= form.text_field :title, placeholder: "What are you offering?", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "control-label" %>
    <%= form.text_area :description, placeholder: "Some detailed information about your service...", class: "form-control" %>
  </div>

  <div class="actions text-center">
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>

